<div class="container-fluid" style="background-color:black">
  <div class="row text-center">
    <div class="col-xs-4">
      <image style="height:5em;" src="/assets/pb_dog_logo.png" />
    </div>
    <div class="col-xs-4">
      <a href="/"><h1 style="color:white;">PawBookings.com</h1></a>
    </div>
  </div>
</div>

<div class="container-fluid">
  <div class="row text-center">
    <div class="col-xs-4 text-left">
      <% if !current_user.nil? %>
        <p>Welcome, <%= "#{current_user.first_name.split("").each {|name| name.capitalize}.join}" %>!</p>
        <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
      <% end %>
    </div>
    <div class="col-xs-4">
      <% unless flash[:notice].nil? %>
        <p id="flash" style="padding:0.5em;color:red;"><%= flash[:notice] %></p>
      <% end %>
    </div>
  </div>
</div>

<script type="text/javascript">
   $('#flash').delay(500).fadeIn('normal', function() {
      $(this).delay(2500).fadeOut();
   });
</script>
