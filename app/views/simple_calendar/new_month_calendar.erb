<div class="kennel_dashboard_calendar">
  <div class="row text-center">
    <div class="col-xs-12">
      <br />
      <div class="calendar-heading">
        <table class="calendar_table">
          <tr>
            <td class="white_td font-18"><p class="font-18"><span class="glyphicon glyphicon-ok" style="color: green; font-size: 30px;"></span> = Reservation(s) booked.</p></td>
            <td class="white_td padding-10 font-18"><span class="calendar-title"><%= t('date.month_names')[start_date.month] %> <%= start_date.year %></span></td>
            <td class="white_td padding-10">
              <%= link_to t('simple_calendar.previous', default: '←'), calendar.url_for_previous_view, {class: 'arrow_style'} %>
              <%= link_to t('simple_calendar.next', default: '→'), calendar.url_for_next_view, {class: 'arrow_style'} %>
            </td>
          </tr>
        </table>
      </div>
      <div class="simple-calendar">
        <br />

        <table class="table table-striped">
          <thead>
            <tr>
              <% date_range.slice(0, 7).each do |day| %>
                <th><%= t('date.abbr_day_names')[day.wday] %></th>
              <% end %>
            </tr>
          </thead>

          <tbody>
            <% date_range.each_slice(7) do |week| %>
              <tr>
                <% week.each do |day| %>
                  <%= content_tag :td, class: calendar.td_classes_for(day) do %>
                    <% if defined?(Haml) && respond_to?(:block_is_haml?) && block_is_haml?(block) %>
                      <% capture_haml(day, sorted_events.fetch(day, []), &block) %>
                    <% else %>
                      <% block.call day, sorted_events.fetch(day, []) %>
                    <% end %>
                  <% end %>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="br_if_desktop">
    <br />
    <br />
  </div>
</div>
