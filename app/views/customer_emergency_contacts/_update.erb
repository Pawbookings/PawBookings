<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal">x</button>
  <h4 class="modal-title" id="myModalLabel">Edit Secondary Emergency Contact</h4>
</div>
<div class="modal-body" style="height: 500px; background-color: white; float: none;
    text-align : center;">
 <%= simple_form_for(@customer_emergency_contact, :html => { id:'form', :class => 'form-vertical simple_form' }) do |f| %>
  <fieldset>
      <p class="font-20" style="margin-top: 50px;">Name: <%= f.input :name, label: false, input_html: {class: 'input_style'} %></p>
      <p class="font-20">Email:<%= f.input :email, label: false, input_html: {class: 'input_style'}  %></p>
      <p class="font-20">Phone:<%= f.input :phone, label: false, input_html: {class: 'input_style'}  %></p>
  </fieldset>
      <br>
      <% if !@customer_emergency_errors_update.nil? %>
        <% @customer_emergency_errors_update.each do |error|%>
          <p style="color:red; font-weight: bold;"><%= "#{error.sub(/./, &:capitalize)} is invalid" %></p>
        <% end %>
      <% end %>
      <br>
        <div class="form-actions">
            <p onclick="return submitForm()", class="text_info bold-text link_edit vet_link submit_link font-20", style="text-align:center; float: none; margin:0; padding:0;">Save</p>
            <%= link_to "Delete", customer_emergency_contact_path(@customer_emergency_contact.id), method: :delete, data: { confirm: 'Are you sure you want to delete this?' }, style: 'color: red !important; font-weight: bold; font-size: 16px;'%>
      </div>
  <% end %>
</div>

<script type="text/javascript">
     function submitForm() {
        $("#form").submit();
    }

    $(document).ready(function() {
      $("#customer_emergency_contact_phone").mask("(999) 999-9999");
    })
</script>