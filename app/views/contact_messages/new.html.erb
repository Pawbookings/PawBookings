<%= render partial: "shared/top_info" %>
<div class="container-fluid contact_container">
  <div class="contact_div">
    <div class="row text-center">
      <div class="col-xs-12">
        <h5 class="main_title arvo_font">Contact PawBookings.com</h5>
        <h6 class="contact_info default_white_color poppins_font">
          Our agents are available 24 hours a day, every day, by email when you fill out the form below or by

          calling us at <strong>(888) 840-PAWS / (888) 840-7297</strong>. If you do call, having your Reservation Confirmation Number (RCN) on hand

          allows us to help you faster.
        </h6>

        <div class="row hidden_if_mobile">
          <div class="col-md-4">
            <h3 class="arvo_font default_green_color text_underline">Other Helpful Links</h3>
            <%= link_to "Frequently Asked Questions", faq_path, class:"link_color font_1_1_em line_height_1_5_em" %>
            <br />
            <%= link_to "Policies/Terms", policies_and_terms_path, class:"link_color font_1_1_em line_height_1_5_em" %>
            <br />
            <%= link_to "Manage your account", new_user_session_path, class:"link_color font_1_1_em line_height_1_5_em" %>
          </div>
          <div class="col-md-4">
            <h6 class="text-center text_underline default_white_color">
              <strong class="contact_address">
                PO Box 772661<br>
                Orlando, FL 32877<br>
                (888) 840-PAWS / (888) 840-7297
              </strong>
            </h6>
          </div>
        </div>

        <div class="hidden_if_desktop">
          <h2 class="poppins_font default_green_color text_underline">Other Helpful Links</h2>
          <div class="useful_links">
            <%= link_to "Frequently Asked Questions", faq_path, class:"link_color" %>
            <br />
            <%= link_to "Change/Cancellation/Refund Policy", policies_and_terms_path, class:"link_color" %>
            <br />
            <%= link_to "Manage your account", new_user_session_path, class:"link_color" %>
          </div>
          <br />
        </div>


        <div class="z_index_2 relative_position">
          <%= form_for @contact_message do |f| %>
            <%= f.label :name, "Name", class: "default_white_color" %>
            <br>
            <%= f.text_field :name, placeholder: " Name", class: "contact_form_field", autofocus: true %>
            <br>
            <%= f.label :subject, "Subject", class: "default_white_color" %>
            <br>
            <%= f.text_field :subject, placeholder: " Subject", class: "contact_form_field" %>
            <br>
            <%= f.label :phone, "Phone", class: "default_white_color" %>
            <br>
            <%= f.text_field :phone, placeholder: " Phone", class: "contact_form_field" %>
            <br>
            <%= f.label :email, "Email", class: "default_white_color" %>
            <br>
            <%= f.text_field :email, placeholder: " Email", class: "contact_form_field" %>
            <br>
            <%= f.label :message, "Message", class: "default_white_color" %>
            <br>
            <%= f.text_area :details, placeholder: " Message", class: "contact_form_field" %>
            <br>
            <div class="g-recaptcha signup_recaptcha contact_form_field" data-sitekey="<%= ENV['recaptcha_public_key'] %>" style="margin: 0 auto; margin-bottom: 70px; padding-left: 40px;"></div>
            <%= f.submit "Send", class: "contact_submit_btn" %>
          <% end %>
        </div>
      </div>
    </div>
    <br />
  </div>
</div>

<%= render partial: "shared/footer" %>
