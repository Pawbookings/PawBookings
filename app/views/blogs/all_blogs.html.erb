<%= render partial: "shared/top_info" %>

<div class="container-fluid leto_font">
  <div class="row text-center">
    <div class="col-xs-12">
        <h5 class="all_blogs_title default_green_color">All Blogs</h5>
        <div class="all_blogs_div">
          <% @all_blogs.each do |blog| %>
            <%= link_to blog.title, blog_path(blog.id), class: "all_blogs_title_link" %>
            <br>
            <%= unsanitize_date(blog.publish_date.to_s) %>
            <br>
            <img class="all_blogs_display_images" src="<%= blog.blog_display_image %>">
            <% if !current_user.nil? && current_user.email == "pawbookings@gmail.com" && current_user.kennel_or_customer == "admin" %>
              <%= link_to "Edit", edit_blog_path(blog.id) %>
              <br>
              <%= link_to "Delete", blog_path(blog.id), data: {confirm: "Are you sure you want to delete?"}, method: "delete" %>
            <% end %>
            <br>
            <br>
        <% end %>
      </div>
    </div>
  </div>
</div>



<div class="footer_bottom_addon">
  <%= render partial: "shared/footer" %>
</div>
