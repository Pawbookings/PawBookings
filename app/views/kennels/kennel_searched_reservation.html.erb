          <p class="default_white_color"><strong class="default_green_color">Last Name: </strong><%= @reservation[:customer_last_name] %></p>
          <p class="default_white_color"><strong class="default_green_color">Email: </strong><%= @reservation[:customer_email] %></p>
          <p class="default_white_color"><strong class="default_green_color">Phone: </strong><%= @reservation[:customer_phone] %></p>
          <br />
        </div>
      </div>
      <div class="col-md-4">
        <div class="searched_res_rooms_chosen_div">
          <h4 class="default_green_color text_underline">Rooms Details</h4>
          <br />
          <% JSON.parse(@reservation[:room_details]).each do |room_name, room_price| %>
          <strong class="default_white_color">•<%= room_name %>- $<%= room_price %></strong>
          <br>
          <br>
          <% end %>
        </div>
      </div>
      <div class="col-md-4">
        <div class="searched_res_check_in_and_out_dates_div">
          <h4 class="default_green_color text_underline">Check-in/Check-out Dates</h4>
          <br />
          <strong class="default_green_color">Check-In: </strong>
          <br />
          <h5 class="default_white_color"><%= unsanitize_date(@reservation[:check_in_date].to_s) %></h5>
          <br>
          <strong class="default_green_color">Check-Out: </strong>
          <br />
          <h5 class="default_white_color"><%= unsanitize_date(@reservation[:check_out_date].to_s) %></h5>
        </div>
      </div>
    </div>
    <br />
    <br />
    <div class="border"></div>
    <br />
    <br />
    <div class="row text-center">
      <div class="col-md-4">
        <div class="searched_res_pets_chosen_div">
          <h4 class="default_green_color text_underline">Pets</h4>
          <br />
          <% counter = @pets.length %>
          <% @pets.each do |pet| %>
            <h5 class="default_green_color">Pet #<%= counter %></h5>
            <p class="default_white_color"><strong class="default_green_color">Name: </strong><%= pet[:name] %></p>
            <p class="default_white_color"><strong class="default_green_color">Cat or Dog: </strong><%= pet[:cat_or_dog] %></p>
            <p class="default_white_color"><strong class="default_green_color">Breed: </strong><%= pet[:breed] %></p>
            <p class="default_white_color"><strong class="default_green_color">Weight: </strong><%= pet[:weight] %></p>
            <p class="default_white_color"><strong class="default_green_color">Vaccincated: </strong><%= pet[:vaccinations] %></p>
            <p class="default_white_color"><strong class="default_green_color">Spay or Neutered: </strong><%= pet[:spay_or_neutered] %></p>
            <br>
            <% counter -= 1 %>
          <% end %>
        </div>
      </div>
      <div class="col-md-4">
        <div class="searched_res_amenities_chosen_div">
          <h4 class="default_green_color text_underline">Amenities</h4>
          <br />
          <% if @reservation[:amenity_details].nil? %>
          <p><strong class="default_white_color">•No Amenities Chosen.</strong></p>
          <% else %>
            <% JSON.parse(@reservation[:amenity_details]).each do |name, description, price, quanity| %>
              <strong class="default_white_color"><%= "•#{name}: #{description}" %></strong>
              <br />
              <strong class="default_white_color"><%= "$#{price} x #{quanity}" %></strong>
              <br />
              <br />
            <% end %>
          <% end %>
        </div>
      </div>
      <div class="col-md-4">
        <div class="searched_res_total_price_div">
          <h4 class="default_green_color text_underline">Total Price</h4>
          <h3 class="default_white_color"><strong>$<%= @reservation[:total_price] %></strong></h3>
        </div>
      </div>
    </div>
  </div>


