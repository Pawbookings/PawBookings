<p class="kennel_h2">Accomodations</p>
	<% if !@kennel.nil? && @changed_time == true %>
		<div style="height: auto; position: relative; overflow: hidden;">
	<% @runs.each_with_index do |run, i| %>
		<div id="runs_cont" class="pet_container" style="width: 700px;height: 550px; float: none;margin: 0 auto !important; margin-bottom: 50px !important;">
			<%= image_tag run.image.url, class: "accom_image kennel_dashboard_avatar" %>
			<br>
			<br>
			<div class="row" style="margin-top: 30px;">
				<div class="col-md-6">
					<p class="font-18 vet_h pet_text no-float"><strong>Title:</strong><%= " #{run.title}" %></p>
					<p class="font-18 vet_h pet_text no-float"><strong>Width:</strong><%= " #{run.size_width}" %></p>
					<p class="font-18 vet_h pet_text no-float"><strong>Length:</strong><%= " #{run.size_length}" %></p>
					<p class="font-18 vet_h pet_text no-float"><strong>Description:</strong><%= " #{run.description}" %></p>
					<p class="font-18 vet_h pet_text no-float"><strong>Indoor or outdoor:</strong><%= " #{run.indoor_or_outdoor}" %></p>
				</div>
				<div class="col-md-6">
					<p class="font-18 vet_h pet_text no-float"><strong>How many pets allowed per accomodation:</strong><%= " #{run.pets_per_run}" %></p>
					<p class="font-18 vet_h pet_text no-float"><strong>Type of pets allowed:</strong><%= " #{run.type_of_pets_allowed}" %></p>
					<p class="font-18 vet_h pet_text no-float"><strong>Price:</strong><%= " #{run.price}" %></p>
					<p class="font-18 vet_h pet_text no-float"><strong>Weight limit:</strong><%= " #{run.weight_limit}" %></p>
				</div>
			</div>
			<br>
			<div class="runs_bigger">
				<%= link_to 'Edit', edit_run_path(run), {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window3', class: 'text_info bold-text link_edit vet_link', style:"margin-left: 330px; margin-right: unset; margin-top: 10px; padding: 0;", id: 'edit_run' } %>
			</div>
			<div class="runs_smaller">
					<%= link_to 'Edit', edit_run_path(run, mobile: true), class: 'text_info bold-text link_edit vet_link', style:"margin-left: 330px; margin-right: unset; margin-top: 10px; padding: 0;", id: 'edit_run' %>
			</div>
			<br>
			<br>
		</div>
	<% end %>
<br>
	</div>
	<div id="runs_biggerr">
		<div class="kennel_button booking_button" id="add_new" style="padding-top:10px; margin-right: auto;margin-left: auto; text-align: center;width: 150px !important; position: absolute; bottom: 0; right: 0; left: 0;">                 
			<%= link_to 'Add New', new_run_path, {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window4', style:"color: white;", class: 'a_as_button' } %>
		</div>
	</div>
	<div id="runs_smallerr">
		<div class="kennel_button booking_button" id="add_new" style="padding-top:10px; margin-right: auto;margin-left: auto; text-align: center;width: 150px !important; position: absolute; bottom: 0; right: 0; left: 0;">                 
			<%= link_to 'Add New', new_run_path(mobile: true), style:"color: white;", class: 'a_as_button' %>
		</div>
	</div>
<br>
<br>
<br>
	<% end %>


<script>
	$(window).on('resize', function() {
		var bigger = document.getElementsByClassName('runs_bigger');
		var smaller = document.getElementsByClassName('runs_smaller');
		if($(window).width() < 1000) {
			for(var i = 0; i < bigger.length; i++) {
				bigger[i].style.display = 'none';
				smaller[i].style.display = 'unset';
			}
			$('#runs_biggerr').css('display', 'none');
			$('#runs_smallerr').css('display', 'unset');
		}else{
			for(var i = 0; i < bigger.length; i++) {
				bigger[i].style.display = 'unset';
				smaller[i].style.display = 'none';
			}
			$('#runs_biggerr').css('display', 'unset');
			$('#runs_smallerr').css('display', 'none');
		}
	});

	$(document).ready(function() {
		var bigger = document.getElementsByClassName('runs_bigger');
		var smaller = document.getElementsByClassName('runs_smaller');
		if($(window).width() < 1000) {
			for(var i = 0; i < bigger.length; i++) {
				bigger[i].style.display = 'none';
				smaller[i].style.display = 'unset';
			}
			$('#runs_biggerr').css('display', 'none');
			$('#runs_smallerr').css('display', 'unset');
		}else{
			for(var i = 0; i < bigger.length; i++) {
				bigger[i].style.display = 'unset';
				smaller[i].style.display = 'none';
			}
			$('#runs_biggerr').css('display', 'unset');
			$('#runs_smallerr').css('display', 'none');
		}
	});
</script>