<p class="kennel_h2" style="padding-bottom:50px;">Amenities</p>
<div style="height: auto; position: relative; overflow: hidden;">
	<% if !@kennel.nil? && !@runs.nil? %>
	<% @amenities.each_with_index do |amenity, i| %>
		<div class="show_bigger">
			<div id="amenity" class="pet_container" style="margin-top: 50px;width: 600px;height: 300px;padding-top: 50px;padding-right: 50px;  <%= (@amenities.length == 1) ? 'float: none; margin: 0 auto !important;' : 'margin-right: 50px !important;float: left !important;margin-left: 125px; margin-bottom: 100px;' %>" >
				<br>
							<p class="font-18 vet_h pet_text no-float"><strong>Title:</strong><%= " #{amenity.title}" %></p>
							<p class="font-18 vet_h pet_text no-float"><strong>Description:</strong><%= " #{amenity.description}" %></p>
							<p class="font-18 vet_h pet_text no-float"><strong>Price:</strong><%= " #{amenity.price}" %></p>
					
				<div class="am_bigger">
					<%= link_to 'Edit', edit_amenity_path(amenity), {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window5', class: 'text_info bold-text link_edit vet_link', style:"margin-left: 270px; margin-right: unset; margin-top: 30px; padding: 0;", id: 'edit_run' } %>
				</div>
				<div class="am_smaller">
					<%= link_to 'Edit', edit_amenity_path(amenity, mobile: true), class: 'text_info bold-text link_edit vet_link', style:"margin-left: 270px; margin-right: unset; margin-top: 30px; padding: 0;", id: 'edit_run' %>
				</div>
				<br>
				<br>
			</div>
		</div>
		<div class="show_smaller">
			<div id="amenity" class="pet_container" style="margin-top: 50px;width: 600px;height: 300px;padding-top: 50px;padding-right: 50px; float: none; margin: 0 auto !important; margin-bottom: 50px !important;" >
			<br>
            <p class="font-18 vet_h pet_text no-float"><strong>Title:</strong><%= " #{amenity.title}" %></p>
            <p class="font-18 vet_h pet_text no-float"><strong>Description:</strong><%= " #{amenity.description}" %></p>
            <p class="font-18 vet_h pet_text no-float"><strong>Price:</strong><%= " #{amenity.price}" %></p>
        
			<div class="am_bigger">
				<%= link_to 'Edit', edit_amenity_path(amenity), {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window5', class: 'text_info bold-text link_edit vet_link', style:"margin-left: 270px; margin-right: unset; margin-top: 30px; padding: 0;", id: 'edit_run' } %>
			</div>
			<div class="am_smaller">
				<%= link_to 'Edit', edit_amenity_path(amenity, mobile: true), class: 'text_info bold-text link_edit vet_link', style:"margin-left: 270px; margin-right: unset; margin-top: 30px; padding: 0;", id: 'edit_run' %>
			</div>
			<br>
			<br>
		</div>
		</div>
		<% if i == @amenities.length - 1%>
			<br>
			<br>
      <br>
			<br>
      <br>
			<div class="am_biggerr">
				<div class="kennel_button booking_button" style="padding-top:10px; margin-right: auto;margin-left: auto; text-align: center;width: 150px !important; position: absolute; bottom: 0; right: 0; left: 0;">                 
					<%= link_to 'Add New', new_amenity_path, {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window6', style:"color: white;", class: 'a_as_button' } %>
				</div>
			</div>
			<div class="am_smallerr">
				<div class="kennel_button booking_button" style="padding-top:10px; margin-right: auto;margin-left: auto; text-align: center;width: 150px !important; position: absolute; bottom: 0; right: 0; left: 0;">                 
					<%= link_to 'Add New', new_amenity_path(mobile: true), style:"color: white;", class: 'a_as_button' %>
				</div>
			</div>
		<% end %>
	<% end %>
<br>
<% if @amenities.length == 0 %>
	<div class="am_biggerr">
		<div class="kennel_button booking_button" style="padding-top:10px; margin-right: auto;margin-left: auto; text-align: center;width: 150px !important; position: absolute; bottom: 0; right: 0; left: 0;">                 
			<%= link_to 'Add New', new_amenity_path, {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window6', style:"color: white;", class: 'a_as_button' } %>
		</div>
	</div>
	<div class="am_smallerr">
		<div class="kennel_button booking_button" style="padding-top:10px; margin-right: auto;margin-left: auto; text-align: center;width: 150px !important; position: absolute; bottom: 0; right: 0; left: 0;">                 
			<%= link_to 'Add New', new_amenity_path(mobile: true), style:"color: white;", class: 'a_as_button' %>
		</div>
	</div>
<% end %>
<br>
<br>
	<% end %>
	</div>

<script>
	$(window).on('resize', function() {
		var bigger = document.getElementsByClassName('am_bigger');
		var smaller = document.getElementsByClassName('am_smaller');
		var buttons_bigger = document.getElementsByClassName('am_biggerr');
		var buttons_smaller = document.getElementsByClassName('am_smallerr');
		if($(window).width() < 1000) {
			for(var i = 0; i < bigger.length; i++) {
				bigger[i].style.display = 'none';
				smaller[i].style.display = 'unset';
			}
			for(var i = 0; i < buttons_bigger.length; i++) {
				buttons_bigger[i].style.display = 'none';
				buttons_smaller[i].style.display = 'unset';
			}
		}else{
			for(var i = 0; i < bigger.length; i++) {
				bigger[i].style.display = 'unset';
				smaller[i].style.display = 'none';
			}
			for(var i = 0; i < buttons_bigger.length; i++) {
				buttons_bigger[i].style.display = 'unset';
				buttons_smaller[i].style.display = 'none';
			}
		}
	});

