<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal">x</button>
  <h4 class="modal-title" id="myModalLabel1" style="font-family: 'Roboto'; text-align; center;font-size:20px;">Add New</h4>
</div>
<div class="modal-body" style="color: black;height: auto; margin-top:0 !important; background-color: white; float: none;
    text-align : center;">
   <%= form_tag @kennel, method: :post, id: 'form' do %>
          <br>
          <%= hidden_field_tag :id, @kennel.id %>
           <p class="font-18">Name:</p>
            <%= text_field_tag :name, nil, placeholder: 'Name', class: "form-control payment_input input_new_reserv black_18" %>
            <br>
            <p class="font-18">Address:</p>
            <%= text_field_tag :address, nil, placeholder: 'Address', class: "form-control payment_input input_new_reserv black_18"%>
            <br>
            <p class="font-18">Email:</p>
            <%= text_field_tag :email, nil, placeholder: 'Email', class: "form-control payment_input input_new_reserv black_18" %>
            <br>
            <p class="font-18">Phone:</p>
            <%= text_field_tag :phone, nil, placeholder: 'Phone', class: "form-control payment_input input_new_reserv black_18" %>
            <br>
            <p class="font-18">Zip:</p>
            <%= text_field_tag :zip, nil, placeholder: 'Zip', class: "form-control payment_input input_new_reserv black_18" %>
            <br>
            <p class="font-18">Sales tax:</p>
            <%= text_field_tag :sales_tax, nil, placeholder: 'Sales tax', class: "form-control payment_input input_new_reserv black_18" %>
            <br>
            <p class="font-18">Mission statement:</p>
            <%= text_field_tag :mission_statement, nil, placeholder: 'Mission statement', class: "form-control payment_input input_new_reserv black_18" %>
            <br>
          <div class="form-actions">
            <p onclick="return submitForm()", class="text_info bold-text link_edit vet_link submit_link font-20", style="text-align:center; float: none; margin:0; padding:0;">Save</p>
            </div>  
      <% end %>
</div>

<script type="text/javascript">
     function submitForm() {
        $("#form").submit();
    }
</script>