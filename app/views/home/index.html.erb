<div class="container">
  <div class="row text-center">
    <div class="col-xs-12">
      <h1>-LANDING PAGE-</h1>
      <% if current_user.nil? %>
      <h2>Log in</h2>
        <%= form_for("user", :url => user_session_path, :html => { :class => "form-horizontal well"}) do |f|%>
          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true %>
          </div>

          <div class="field">
            <%= f.label :password %><br />
            <%= f.password_field :password, autocomplete: "off" %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end -%>

          <div class="actions">
            <%= f.submit "Log in" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
        <%= render partial: "shared/user_signup_links" %>
      <% end %>
    </div>
  </div>
</div>
