<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal">x</button>
  <h4 class="modal-title" id="myModalLabel1" style="font-family: 'Roboto'; font-size:20px; text-align: center;">Edit Existing</h4>
</div>
<div class="modal-body" style="color: black; width: 1000px;height: auto; margin-top:0 !important; background-color: white; float: none;
    text-align : center;">
	<% @run = Run.find(@run_id) if params[:run_id] %>
   <%= form_tag @run, multipart: true, id: 'form', method: :put do %>
			<br>
			<%= hidden_field_tag :id, @run.id %>
			<div class="row">
				<div class="col-md-6">
					<p class="font-18">Title:</p>
					<%= text_field_tag :title, nil, value: @run.title, class: "form-control payment_input input_new_reserv black_18 margin-0-auto" %>
					<br>
					<p class="font-18">Width of room:</p>
					<%= text_field_tag :size_width, nil, value: @run.size_width, class: "form-control payment_input input_new_reserv black_18 margin-0-auto"%>
					<br>
					<p class="font-18">Length of room:</p>
					<%= text_field_tag :size_length, nil, value: @run.size_length, class: "form-control payment_input input_new_reserv black_18 margin-0-auto" %>
					<br>
					<p class="font-18">Description:</p>
					<%= text_field_tag :description, nil, value: @run.description, class: "form-control payment_input input_new_reserv black_18 margin-0-auto" %>
					<br>
					<p class="font-18">Indoor or Outdoor:</p>
					<%= select_tag :indoor_or_outdoor, options_for_select(indoor_outdoor_option), selected: @run.indoor_or_outdoor, class:"form-control payment_input input_new_reserv black_18 margin-0-auto" %>
					<br>
					<div style="width: 200px;margin: 0 auto;"><p class="font-18">How many pets are allowed per accomodation?</p></div>
					<%= text_field_tag :pets_per_run, nil, value: @run.pets_per_run, class: "form-control payment_input input_new_reserv black_18 margin-0-auto" %>
				</div>


				<div class="col-md-6">
					<p class="font-18">Type of pets allowed:</p>
					<%= select_tag :type_of_pets_allowed, options_for_select(cat_or_dog_only_option), selected: @run.type_of_pets_allowed, class:"form-control payment_input input_new_reserv black_18 margin-0-auto" %>
					<br>
					<p class="font-18">Price($):</p>
					<%= text_field_tag :price, nil, value: @run.price, class: "form-control payment_input input_new_reserv black_18 margin-0-auto"%>
					<br>
					<p class="font-18">Weight limits(lbs):</p>
					<%= text_field_tag :weight_limit, nil, value: @run.weight_limit, class: "form-control payment_input input_new_reserv black_18 margin-0-auto" %>
					<br>
					<div style="width: 200px;margin: 0 auto;"><p class="font-18">How many of this accomodations do you have total?</p></div>
					<%= text_field_tag :number_of_rooms, nil, value: @run.number_of_rooms, class: "form-control payment_input input_new_reserv black_18 margin-0-auto" %>
					<br>
					<p class="font-18">Accomodation photo:</p>
					<%= file_field_tag :image, placeholder:'Choose file', class:"form-control payment_input input_new_reserv black_18 margin-0-auto", style:'height: 40px;' %>
					<br>
				</div>
			</div>
			<br>
			<% if !@runs_update.nil? %>
        <% @runs_update.each do |error|%>
          <p style="color:red; font-weight: bold;"><%= "#{error.sub(/./, &:capitalize)} is invalid" %></p>
        <% end %>
      <% end %>
			<br>
			<br>
			<div class="form-actions" style="padding-left: 100px;">
				<p onclick="return submitForm()", class="text_info bold-text link_edit vet_link submit_link font-20", style="margin-top: -5px !important; margin-right: 0 !important; margin-left: 120px !important;">Save</p>
      			<%= link_to "Delete", run_path(@run.id), method: :delete, data: { confirm: 'Are you sure you want to delete this?' }, style: 'color: red !important; font-weight: bold; font-size: 16px;'%>
				</div>  
	<% end %>
</div>

<script type="text/javascript">
     function submitForm() {
        $("#form").submit();
    }
</script>