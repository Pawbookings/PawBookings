<div class="container">
	<% @run ||= Run.new %>
		<%= form_for @run, html: {multipart: true, style: 'text-align: center;'}, id:'form2' do |f| %>
			<div class="row" style="margin-top: -40px;float: right;margin-right: 10px;"><span style="font-size: 25px;cursor: pointer;" onclick="location.href='/kennels?tab=runs'">x</span></div>
	 		<p style="font-size: 20px !important; margin-top: 50px; margin-bottom: 50px;">Add New Run</p>
			<br>
			<div class="row">
				<%= f.hidden_field :mobile, value: true %>
				<p class="font-18">Title:</p>
				<%= f.text_field :title, placeholder: 'Title', class: "form-control payment_input input_new_reserv black_18 margin-0-auto" %>
				<br>
				<p class="font-18">Width of room:</p>
				<%= f.text_field :size_width, placeholder: 'Width of room', class: "form-control payment_input input_new_reserv black_18 margin-0-auto"%>
				<br>
				<p class="font-18">Length of room:</p>
				<%= f.text_field :size_length, placeholder: 'Length', class: "form-control payment_input input_new_reserv black_18 margin-0-auto" %>
				<br>
				<p class="font-18">Description:</p>
				<%= f.text_field :description, placeholder: 'Description', class: "form-control payment_input input_new_reserv black_18 margin-0-auto" %>
				<br>
				<p class="font-18">Indoor or Outdoor:</p>
				<%= f.select :indoor_or_outdoor, options_for_select(indoor_outdoor_option), value: 'indoor', class:"form-control payment_input input_new_reserv black_18 margin-0-auto" %>
				<br>
				<div style="width: 200px;margin: 0 auto;"><p class="font-18">How many pets are allowed per accomodation?</p></div>
				<%= f.text_field :pets_per_run, placeholder: '1', class: "form-control payment_input input_new_reserv black_18 margin-0-auto" %>
				<p class="font-18">Type of pets allowed:</p>
				<%= f.select :type_of_pets_allowed, options_for_select(cat_or_dog_only_option), value: 'cat', class:"form-control payment_input input_new_reserv black_18 margin-0-auto" %>
				<br>
				<p class="font-18">Price($):</p>
				<%= f.text_field :price, placeholder: 'Price', class: "form-control payment_input input_new_reserv black_18 margin-0-auto"%>
				<br>
				<p class="font-18">Weight limits(lbs):</p>
				<%= f.text_field :weight_limit, placeholder: 'Weight limit', class: "form-control payment_input input_new_reserv black_18 margin-0-auto" %>
				<span style="font-size: 18px;">Leave blank if none</span> 
				<br>
				<div style="width: 200px;margin: 0 auto;margin-top: 20px;"><p class="font-18">How many of this accomodations do you have total?</p></div>
				<%= f.text_field :number_of_rooms, placeholder: '1', class: "form-control payment_input input_new_reserv black_18 margin-0-auto" %>
				<br>
				<p class="font-18">Accomodation photo:</p>
				<%= f.file_field :image, placeholder:'Choose file', class:"form-control payment_input input_new_reserv black_18 margin-0-auto edit_link", style:'height: 40px;' %>
				<br>
			</div>
			<br>
			<% @runs_create ||= params[:runs_create] %>
			<% if !@runs_create.nil? %>
				<% @runs_create.each do |error|%>
					<p style="color:red; font-weight: bold;"><%= "#{error.sub(/./, &:capitalize)} is invalid" %></p>
				<% end %>
			<% end %>
			<br>
			<br>
					<%= f.submit "Save", class:'text_info bold-text link_edit vet_link submit_link font-20', style:"border: none;text-align:center; float: none; margin:0; padding:0; background-color: transparent" %> 
			<br>
	<% end %>
</div>