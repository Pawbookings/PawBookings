<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal">x</button>
  <h4 class="modal-title" id="myModalLabel1" style="font-family: 'Roboto'; font-size:20px; text-align: center;">Edit Existing</h4>
</div>
<div class="modal-body" style="color: black; width: 1000px;height: auto; margin-top:0 !important; background-color: white; float: none;text-align : center;">
		<% @amenity = Amenity.find(@amenity_id) if params[:amenity_id] %>
		<%= form_for @amenity, html: {multipart: true, id:'form2'} do |f| %>
			<br>
			<p class="font-18">Title:</p>
			<%= f.text_field :title, placeholder: 'Title', class: "form-control payment_input input_new_reserv black_18 margin-0-auto" %>
			<br>
			<p class="font-18">Description:</p>
			<%= f.text_field :description, placeholder: 'Description', class: "form-control payment_input input_new_reserv black_18 margin-0-auto"%>
			<br>
			<p class="font-18">Price:</p>
			<%= f.text_field :price, placeholder: 'Price', class: "form-control payment_input input_new_reserv black_18 margin-0-auto" %>
			<br>
			<% if !@amenity_update.nil? %>
        <% @amenity_update.each do |error|%>
          <p style="color:red; font-weight: bold;"><%= "#{error.sub(/./, &:capitalize)} is invalid" %></p>
        <% end %>
      <% end %>
			<br>
			<br>
			<div class="form-actions" style="padding-left: 100px;">
				<p onclick="return submitForm()", class="text_info bold-text link_edit vet_link submit_link font-20", style="margin-top: -5px !important; margin-right: 0 !important; margin-left: 120px !important;">Save</p>
      			<%= link_to "Delete", amenity_path(@amenity.id), method: :delete, data: { confirm: 'Are you sure you want to delete this?' }, style: 'color: red !important; font-weight: bold; font-size: 16px;'%>
				</div> 
		<% end %>
</div>

<script type="text/javascript">
     function submitForm() {
        $("#form2").submit();
    }
</script>