<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal">x</button>
  <h4 class="modal-title" id="myModalLabel">New Veterinarian</h4>
</div>
<div class="modal-body" style="height: auto; background-color: white; float: none;
    text-align : center;">
    <% @customer_vet_info ||= CustomerVetInfo.new %>
 <%= simple_form_for(@customer_vet_info, :html => { id:'form', :class => 'form-vertical simple_form' }) do |f| %>
  <fieldset>
      <p class="font-20">Name: <%= f.input :name, label: false, input_html: {class: 'input_style'} %></p>
      <p class="font-20">Email:<%= f.input :email, label: false, input_html: {class: 'input_style'}  %></p>
      <p class="font-20">Phone:<%= f.input :phone, label: false, input_html: {class: 'input_style'}  %></p>
      <p class="font-20">Emergency Phone:<%= f.input :emergency_phone, label: false, input_html: {class: 'input_style'}  %></p>
      <p class="font-20">Address:<%= f.input :address, label: false, input_html: {class: 'input_style'}  %></p>
  </fieldset>
      <br>
      <% if !@customer_vet_infos_errors_create.nil? %>
        <% @customer_vet_infos_errors_create.each do |error|%>
          <p style="color:red; font-weight: bold;"><%= "#{error.sub(/./, &:capitalize)} is invalid" %></p>
        <% end %>
      <% end %>
      <br>
      <div class="form-actions">
            <p onclick="return submitForm()", class="text_info bold-text link_edit vet_link submit_link font-20", style="text-align:center; float: none; margin:0; padding:0;">Save</p>
      </div>
  <% end %>
</div>

<script type="text/javascript">
     function submitForm() {
        $("#form").submit();
    }

    $(document).ready(function() {
      $("#customer_vet_info_phone").mask("(999) 999-9999");
      $("#customer_vet_info_emergency_phone").mask("(999) 999-9999");
    })
</script>
