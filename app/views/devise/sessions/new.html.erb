<%= render partial: "shared/top_info" %>

<div class="container-fluid">
  <div class="row text-center">
    <div class="login_div">
        <% if current_user.nil? %>
        <h5 class="login_title">Log In</h5>
          <%= form_for("user", :url => user_session_path) do |f|%>
            <div class="field">
              <%= f.label :email, class: "leto_font" %><br />
              <%= f.email_field :email, class:"login_input", placeholder: " Email", autofocus: true %>
            </div>

            <div class="field">
              <%= f.label :password, class: "leto_font" %><br />
              <%= f.password_field :password, class: "login_input", placeholder: " Password", autocomplete: "off" %>
            </div>

            <% if devise_mapping.rememberable? -%>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end -%>

            <div class="actions">
              <%= f.submit "Log in", class: "login_submit_btn" %>
            </div>
          <% end %>
          <%= render "devise/shared/links" %>
          <br>
          <%= link_to "Sign up", kennel_or_customer_path %>
        <% end %>
    </div>
  </div>
</div>

<%= render partial: "shared/footer" %>
