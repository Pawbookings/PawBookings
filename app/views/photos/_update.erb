<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal">x</button>
  <h4 class="modal-title" id="myModalLabel1" style="font-family: 'Roboto'; font-size:20px; text-align: center;">Edit Existing</h4>
</div>
<div class="modal-body" style="color: black; width: 1000px;height: 650px; margin-top:0 !important; background-color: white; float: none;text-align : center;">
		<% @photo = Photo.find(@photo_id) if params[:photo_id] %>
		<%= form_for @photo, html: { multipart: true, id:'form'} do |f| %>
			<br>
			<div style="margin-top:180px">
				<p class="font-18">Kennel photo:</p>
				<%= f.file_field :image, class: "form-control payment_input input_new_reserv black_18 margin-0-auto" %>
				<br>
			</div>
			<br>
			<% if !@photo_update.nil? %>
          <p style="color:red; font-weight: bold;"><%= "Image is invalid" %></p>
					<% end %>
			<br>
			<div class="form-actions" style="padding-left: 100px;">
				<p onclick="return submitForm()", class="text_info bold-text link_edit vet_link submit_link font-20", style="margin-top: -5px !important; margin-right: 0 !important; margin-left: 120px !important;">Save</p>
      			<%= link_to "Delete", photo_path(@photo.id), method: :delete, data: { confirm: 'Are you sure you want to delete this?' }, style: 'color: red !important; font-weight: bold; font-size: 16px;'%>
				</div> 
		<% end %>
</div>

<script type="text/javascript">
     function submitForm() {
        $("#form").submit();
    }
		</script>