<div class="container">
  <% @photo ||= Photo.new %>
	<%= form_for @photo, url: photos_path, html: { multipart: true, style: 'text-align: center;' } do |f| %>
    <div class="row" style="margin-top: -40px;float: right;margin-right: 10px;"><span style="font-size: 25px;cursor: pointer;" onclick="location.href='/kennels?tab=photos'">x</span></div>
	 	<p style="font-size: 20px !important; margin-top: 50px; margin-bottom: 50px;">Add New Photo</p>
    <br>
    <%= f.hidden_field :mobile, value: true %>
    <div style="margin-top:180px">
      <p class="font-18">Kennel photo:</p>
      <%= f.file_field :image, class: "form-control payment_input input_new_reserv black_18 margin-0-auto" %>
      <br>
    </div>
    <% @photo_create ||= params[:photo_create] %>
    <% if !@photo_create.nil? %>
        <p style="color:red; font-weight: bold;"><%= "Image is invalid" %></p>
        <% end %>
    <br>
    <div style="margin-top:280px">
      <%= f.submit "Save", class:'text_info bold-text link_edit vet_link submit_link font-20', style:"border: none;text-align:center; float: none; margin:0; padding:0; background-color: transparent" %> 
      <br>
    </div>
	<% end %>
</div>