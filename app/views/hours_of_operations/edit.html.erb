<%= render partial: "shared/top_info" %>

<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12">
      <h5 class="hours_of_operation_title">Hours of Operation:</h5>
      <%= render partial: "shared/kennel_dashboard_option_btn_div" %>
      <div class="hours_of_operation_div text-center">
        <%= form_for(@hours_of_operation, {action: :update}) do |f| %>
          <%= f.label :monday %>
          <%= f.select :monday_open, options_for_select(hours_of_day_option, @hours_of_operation[:monday_open]) %>-<%= f.select :monday_close, options_for_select(hours_of_day_option, @hours_of_operation[:monday_close]) %>
          <br>
          <br>
          <%= f.label :tuesday %>
          <%= f.select :tuesday_open, options_for_select(hours_of_day_option, @hours_of_operation[:tuesday_open]) %>-<%= f.select :tuesday_close, options_for_select(hours_of_day_option, @hours_of_operation[:tuesday_close]) %>
          <br>
          <br>
          <%= f.label :wednesday %>
          <%= f.select :wednesday_open, options_for_select(hours_of_day_option, @hours_of_operation[:wednesday_open]) %>-<%= f.select :wednesday_close, options_for_select(hours_of_day_option, @hours_of_operation[:wednesday_close]) %>
          <br>
          <br>
          <%= f.label :thursday %>
          <%= f.select :thursday_open, options_for_select(hours_of_day_option, @hours_of_operation[:thursday_open]) %>-<%= f.select :thursday_close, options_for_select(hours_of_day_option, @hours_of_operation[:thursday_close]) %>
          <br>
          <br>
          <%= f.label :friday %>
          <%= f.select :friday_open, options_for_select(hours_of_day_option, @hours_of_operation[:friday_open]) %>-<%= f.select :friday_close, options_for_select(hours_of_day_option, @hours_of_operation[:friday_close]) %>
          <br>
          <br>
          <%= f.label :saturday %>
          <%= f.select :saturday_open, options_for_select(hours_of_day_option, @hours_of_operation[:saturday_open]) %>-<%= f.select :saturday_close, options_for_select(hours_of_day_option, @hours_of_operation[:saturday_close]) %>
          <br>
          <br>
          <%= f.label :sunday %>
          <%= f.select :sunday_open, options_for_select(hours_of_day_option, @hours_of_operation[:sunday_open]) %>-<%= f.select :sunday_close, options_for_select(hours_of_day_option, @hours_of_operation[:sunday_close]) %>
          <br>
          <br>
          <%= f.submit "Update", class:"btn btn-primary" %>
          <br>
          <br>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= render partial: "shared/footer" %>
